<%= render layout: 'shared/show' do %>
	<%= link_to 'Vist website', @library.url if @library.url %>
	<h3>Locations</h3>
	<%= link_to 'Add Location', new_location_url(library: @library.id), {class: 'btn btn-success'} %>
	<ul>
		<% @library.locations.each do |location| %>
			<li>
				<%= link_to location.name, location %>
				<%= link_to 'Delete', polymorphic_url(location, library: @library.id), {
																method: :delete, class: 'btn btn-danger',
																data: {confirm: "Are you sure you want to delete #{location}?"}
															} %>
				<h4>Books</h4>
				<%= render 'locations/book_list', location: location, url_params: {library: @library.id, location: location.id} %>
			</li>
		<% end %>
	</ul>
<% end %>