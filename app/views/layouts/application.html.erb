<!DOCTYPE html>
<html>
<head>
  <title>Booklist</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="total">
	<nav class='nav'>
		<div class="container nav_container">
			<%= link_to 'Booklist', root_url, {class: 'brand nav_heading'} %>
			<ul class='nav_links clearfix'>
				<li><%= link_to 'Books', books_url(Book.default_index_params) %></li>
				<li><%= link_to 'Bookshelf', bookshelf_url %></li>
				<li><%= link_to 'Libraries', libraries_url %></li>
				<li><%= link_to 'Lists', lists_url %></li>
				<li><%= link_to 'Add Book', new_book_url, {class: 'btn btn-success'} %></li>
			</ul>
		</div>
	</nav>
	<%= yield %>
</div>
<div class="footer">
	<ul class="footer_links container">
		<li><%= link_to 'All Fields', fields_url %></li>
		<li><%= link_to 'Add Author', new_author_url %></li>
		<li><%= link_to 'Library Items', library_items_url %></li>
		<li><%= link_to 'Inactive books', books_url(Book.default_index_params.merge({active: false})) %></li>
		<li><%= link_to 'Reporting', reporting_url %></li>
	</ul>
</div>
<div class="modal_container" id="modal_container" style="display:none;">
	<div class="modal_overlay" id="modal_overlay"></div>
	<div class="modal" id="modal">
		<div class="modal_body" id="modal_body"></div>
		<div class="modal_buttons modal_confirm_buttons">
			<button class="btn btn-default" id="modal_confirm_cancel"></button>
			<button class="btn btn-danger" id="modal_confirm_confirm"></button>
		</div>
		<div class="modal_buttons modal_alert_buttons">
			<button class="btn btn-default" id="modal_alert_confirm"></button>
		</div>
    </div>
</div>
<%= javascript_include_tag "qrcode" %>
<%= javascript_include_tag "app.min" %>
</body>
</html>
