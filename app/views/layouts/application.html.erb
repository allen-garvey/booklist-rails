<!DOCTYPE html>
<html>
<head>
  <title>Booklist</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class='nav'>
	<div class="container">
		<%= link_to 'Booklist', root_url, {class: 'brand nav_heading'} %>
		
		<div class='nav_links clearfix'>
			<%= link_to 'Books', books_index_url %>
			<%= link_to 'Bookshelf', books_index_url %>
			<%= link_to 'Lists', lists_index_url %>
			<%= link_to 'Locations', books_index_url %>
			<%= link_to 'Add Book', new_book_url, {class: 'btn btn-success'} %>
		</div>
	</div>
</nav>
<%= yield %>

</body>
</html>
