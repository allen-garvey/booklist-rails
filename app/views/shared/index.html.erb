<div class="container">
	<%= render 'shared/flash_alert' %>
	<h1><%= @model[:name].pluralize.gsub(/_/, ' ') %></h1>
	<%= link_to "Add #{@model[:name].gsub(/_/, ' ')}", url_for(["new_#{@model[:name].downcase}"]), {class: 'btn btn-success btn-sm'} %>
	
	<ul class="index_list">
		<% @model[:items].each do |item| %>
			<li>
				<%= link_to item, item %>
				<div class="btn_group">
					<%= link_to 'Edit', edit_polymorphic_url(item), {class: 'btn btn-default btn-xs'} %>
					<%= link_to 'Delete', polymorphic_url(item), {
																	method: :delete, class: 'btn btn-danger btn-xs',
																	data: {confirm: "Are you sure you want to delete #{item}?"}
																}  %>
				</div>
			</li>
		<% end %>
	</ul>
</div>