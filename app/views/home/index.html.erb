<header class="home_header">
	<div class="container">
		<h1 class="home_heading">Booklist</h1>	
	    <p class="tagline">All your books, all in one place</p>
	</div>
</header>
<div class="container home_section_container">
	<div class="home_section">
		<h2 class="home_section_heading"><%= link_to 'Books', books_url(Book.default_index_params) %></h2>
		<p class="description">All your books</p>
		<%= link_to 'Add Book', new_book_url, {class: 'btn btn-success'} %>
	</div>
	<div class="home_section">
		<h2 class="home_section_heading"><%= link_to 'Bookshelf', bookshelf_url %></h2>
		<p class="description">What's on your bookshelf now</p>
	</div>
	<div class="home_section">
		<h2 class="home_section_heading"><%= link_to 'Lists', lists_url %></h2>
		<p class="description">Lists of books to read</p>
	</div>
	<div class="home_section">
		<h2 class="home_section_heading"><%= link_to 'Libraries', libraries_url %></h2>
		<p class="description">Where all your books are</p>
	</div>
	<div class="home_section">
		<h2 class="home_section_heading"><%= link_to 'Library Items', library_items_url %></h2>
		<p class="description">When your stuff is due</p>
	</div>
</div>